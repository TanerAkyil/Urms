@model IEnumerable<Urms.Model.Department>

@{
    ViewBag.Title = "Index";
}
<div class="right_col" role="main">
    <h2>Index</h2>

    <p>
        <button type="button" class="btn btn-success"> @Html.ActionLink("Yeni  Kategori Ekle", "Create") </button>
    </p>
    <table class="table" id="myTable">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DeptCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeptName)
            </th>
            
            
           
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DeptCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeptName)
                </td>





                <td>
                    <button type="button" class="btn btn-primary">  @Html.ActionLink("Düzenle", "Edit", new { id = item.Id })  </button>
                    <button type="button" class="btn btn-danger"> @Html.ActionLink("Detay", "Details", new { id = item.Id })   </button>
                    <button type="button" class="btn btn-success">  @Html.ActionLink("Sil", "Delete", new { id = item.Id })  </button>


                </td>
            </tr>
        }
        </tbody>
    </table>
 </div>