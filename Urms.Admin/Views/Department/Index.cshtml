@model IEnumerable<Urms.Model.Department>

@{
    ViewBag.Title = "Index";
}
<div class="right_col" role="main">
    <h2>Index</h2>

    <p>
        <a href="@Url.Action("Create")" , class="btn btn-primary btn-xs">Yeni Department</a>
    </p>
    <table class="table" id="myTable">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DeptCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeptName)
            </th>
            
            
           
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DeptCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DeptName)
                </td>





                <td>
                    <a href="@Url.Action("Edit", new { id = item.Id})" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Düzenle </a>
                    <a href="@Url.Action("Delete", new { id = item.Id})" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Sil </a>
                    <a href="@Url.Action("Details", new { id = item.Id})" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> Detaylar </a>


                </td>
            </tr>
        }
        </tbody>
    </table>
 </div>