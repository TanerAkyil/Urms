@model IEnumerable<Urms.Model.Course>

@{
    ViewBag.Title = "Index";
}
<div class="right_col" role="main">
    <h2>Index</h2>

    <p>
        <button type="button" class="btn btn-success"> @Html.ActionLink("Yeni  Kategori Ekle", "Create") </button>
    </p>
    <table class="table" id="myTable">
        <thead>
            <tr>



                <th>
                    @Html.DisplayNameFor(model => model.CourseCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CourseName)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {

            <tr>
                <td>@item.CourseCode</td>
                <td><a href="@Url.Action("Edit",new { id = item.Id })">@item.CourseName</a></td>
                <td>@item.Description</td>


            
                   
                   
                   
                <td>
                    <button type="button" class="btn btn-primary">  @Html.ActionLink("Düzenle", "Edit", new { id = item.Id })  </button>
                    <button type="button" class="btn btn-danger"> @Html.ActionLink("Detay", "Details", new { id = item.Id })   </button>
                    <button type="button" class="btn btn-success">  @Html.ActionLink("Sil", "Delete", new { id = item.Id })  </button>


                </td>
               
            </tr>

            }
      </tbody>
    </table>
</div>
