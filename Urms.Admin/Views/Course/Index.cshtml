@model IEnumerable<Urms.Model.Course>

@{
    ViewBag.Title = "Index";
}
<div class="right_col" role="main">
    <h2>Index</h2>

    <p>
        <a href="@Url.Action("Create")" , class="btn btn-primary btn-xs">Yeni Ders</a>
    </p>
    <table class="table" id="myTable">
        <thead>
            <tr>



                <th>
                    @Html.DisplayNameFor(model => model.CourseCode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CourseName)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {

            <tr>
                <td>@item.CourseCode</td>
                <td><a href="@Url.Action("Edit",new { id = item.Id })">@item.CourseName</a></td>
                <td>@Html.Raw(item.Description)</td>
          
                <td>
                    <a href="@Url.Action("Edit", new { id = item.Id})" class="btn btn-primary btn-xs">Düzenle</a>
                    <a href="@Url.Action("Delete", new { id = item.Id})" class="btn btn-danger btn-xs">Sil</a>
                    <a href="@Url.Action("Details", new { id = item.Id})" class="btn btn-success btn-xs">Detaylar</a>


                </td>
               
            </tr>

            }
      </tbody>
    </table>
</div>
