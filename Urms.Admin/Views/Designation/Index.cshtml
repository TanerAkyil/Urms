@model IEnumerable<Urms.Model.Designation>

@{
    ViewBag.Title = "Index";
}
<div class="right_col" role="main">
    <h2>Index</h2>

    <p>
        <a href="@Url.Action("Create")" , class="btn btn-primary btn-xs">Yeni Designation</a>
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DesignationName)
            </th>
           
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DesignationName)
            </td>


            <td>
                <a href="@Url.Action("Edit", new { id = item.Id})" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Düzenle </a>
                <a href="@Url.Action("Delete", new { id = item.Id})" class="btn btn-danger btn-xs"><i class="fa fa-trash-o"></i> Sil </a>
                <a href="@Url.Action("Details", new { id = item.Id})" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> Detaylar </a>


            </td>
        </tr>
        }

    </table>
    </div>
