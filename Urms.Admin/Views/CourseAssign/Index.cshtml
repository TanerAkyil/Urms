@model IEnumerable<Urms.Model.CourseAssign>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <button type="button" class="btn btn-success"> @Html.ActionLink("Yeni  Kategori Ekle", "Create") </button>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DepartmentId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TeacherId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourseId)
        </th>
     
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DepartmentId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TeacherId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CourseId)
        </td>


        <td>
            <button type="button" class="btn btn-primary">  @Html.ActionLink("Düzenle", "Edit", new { id = item.Id })  </button>
            <button type="button" class="btn btn-danger"> @Html.ActionLink("Detay", "Details", new { id = item.Id })   </button>
            <button type="button" class="btn btn-success">  @Html.ActionLink("Sil", "Delete", new { id = item.Id })  </button>


        </td>
    </tr>
}

</table>
