@model IEnumerable<Urms.Model.Teacher>

@{
    ViewBag.Title = "Index";
    
}
<div class="right_col" role="main">
    <h2>Index</h2>

    <p>
        <button type="button" class="btn btn-success"> @Html.ActionLink("Yeni  Kategori Ekle", "Create") </button>
    </p>
    <table class="table" id="myTable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Department.DeptName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Designation.DesignationName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TeacherName)
                </th>
        
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ContactNo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreaditToBeTaken)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RemaingCreadit)
                </th>

                <th></th>
            </tr>
            </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Department.DeptCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Designation.DesignationName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TeacherName)
                    </td>
                   
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ContactNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreaditToBeTaken)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RemaingCreadit)
                    </td>

                    <td>
                        <button type="button" class="btn btn-primary">  @Html.ActionLink("Düzenle", "Edit", new { id = item.Id })  </button>
                        <button type="button" class="btn btn-danger"> @Html.ActionLink("Detay", "Details", new { id = item.Id })   </button>
                        <button type="button" class="btn btn-success">  @Html.ActionLink("Sil", "Delete", new { id = item.Id })  </button>


                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>